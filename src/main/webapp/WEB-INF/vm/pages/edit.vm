#set( $layout = "Admin.vm" )
<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<form action="/iliasApp/admin/pages/update" method="POST">
				<input type="hidden" name="_method" value="PUT" />
				<div class="form-group">
					<label for="title">Title</label>
					<input type="text" name="page.title" id="title" class="form-control" value="$page.title" />
				</div>
				<div class="form-group">
					<label for="slug">Slug</label>
					<input type="text" name="page.slug" id="slug" class="form-control" value="$page.slug" />
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-md btn-success">Update</button>
				</div>
			</form>
		</div>
	</div>
</div>